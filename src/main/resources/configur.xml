<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id ="red" class = "colors.service.RedServiceImpl"/>
    <bean id = "white" class="colors.service.WhiteServiceImpl"/>
    <bean id= "pink" class="colors.service.PinkServiceImpl">
       <constructor-arg index="0" ref="red"/>
        <constructor-arg index="1" ref="white"/>
    </bean>

</beans>